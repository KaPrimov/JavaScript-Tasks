extends ../layout.pug

block content
  <h1>Hello I'm your Node Meme DB app!</h1>
  .memes
    each meme in memes
      .meme-wrapper
        h2=meme.title
        img(src=meme.image, alt="image-name")
        p=meme.description.substring(0, 20)
        a.all-around-button(href=`/meme/details/${meme._id}`)= 'Details'
      

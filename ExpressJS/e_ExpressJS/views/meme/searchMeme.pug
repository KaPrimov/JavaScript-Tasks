extends ../layout.pug

block content
  .container
    form.form.center-form(method='post', action='/searchMeme' )      
      .form-group
        label(for='title') Title
        input#movieTitle.input-field(name='title', type='text')    
      .form-group
        label(for='genre') Genre
        select.input-field(name='genre')
          each genre in genres
            option(value=`${genre._id}`)=genre.genreName
      .form-group
        input.form-btn.btn(type='submit', value='Search')
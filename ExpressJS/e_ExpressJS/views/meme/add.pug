extends ../layout.pug

block content
  h1 Add Meme
  .container
    form.form.center-form(method='post', enctype='multipart/form-data', action='/addMeme' )      
      .form-group
        label(for='title') Title
        input#movieTitle.input-field(name='title', type='text')
      .form-group
        label(for='description') Description
        textarea#movieTitle.input-field(name='description', type='text')
      .form-group
        label(for='image') Image
        input#image.input-field(name='image', type='file', accept='.jpg,.jpeg,.png')
      .form-group
        label(for='genre') Genre
        select.input-field(name='genre')
          each genre in genres
            option(value=`${genre._id}`)=genre.genreName
      .form-group
        input.form-btn.btn(type='submit', value='Add')

extends ../layout.pug

block append content
  form(method='post')
    h2 Create Product
    div
      label(for='category') Category
      select#category(name='category')
        option(value='beef') Beef
        option(value='chicken') Chicken
        option(value='lamb') Lamb
    div
      label(for='imageUrl') Image Url
      input#imageUrl(name='imageUrl', type='text' value=imageUrl)
    div
      label(for='size') Size
      input#size(name='size', type='number' min=17 max=24)
    div
      strong Toppings
      br
      textarea(name='toppings' value=toppings)
    div
      input.button(type='submit', value='Create', style='border:0')
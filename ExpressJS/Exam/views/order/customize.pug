extends ../layout

block content
  h1 Customize your order
  .catalog
    .column
      img(src=product.image)
    .column
      h2= `${product.category} doner ${product.size}`      
      .toppings
        form(method='POST')
          input(name='product_id', type='hidden', value=product._id)
          if product.toppings.length > 0
            h3 Toppings
              each topping in product.toppings
                input(name='toppings', type='checkbox', value=topping, checked='')
                label(for=topping)= topping
                br
          else
            h2 No Toppings
          input.button(type='submit' value='Checkout')
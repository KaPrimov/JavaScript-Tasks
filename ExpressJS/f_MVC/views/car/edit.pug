extends ../layout.pug

block content
  form.form.center-form(method='post', enctype='multipart/form-data')
    h2 Edit Car
    .form-group
      label(for='model') Model
      input#name.input-field(name='model', type='text', value=car.model)
    .form-group
      label(for='price') Price
      input#name.input-field(name='price', type='number',  step="0.05" min="0" value=car.price)
    .form-group
      label(for='image') Image
      input#image.input-field(name='image', type='file', accept='.jpg,.jpeg,.png', value=car.image)
    .form-group
      label(for='rentDuration') Rent Duration
      input#name.input-field(name='rentDuration', type='number',  step="1" min="0" value=car.rentDuration)
    .form-group
      input.form-btn.btn(type='submit', value='Edit')

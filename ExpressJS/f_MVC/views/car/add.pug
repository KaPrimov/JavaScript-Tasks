extends ../layout.pug

block content
  form.form.center-form(method='post', enctype='multipart/form-data')
    h2 Add Car
    .form-group
      label(for='model') Model
      input#name.input-field(name='model', type='text')
    .form-group
      label(for='price') Price
      input#name.input-field(name='price', type='number' step="0.05" min="0")
    .form-group
      label(for='image') Image
      input#image.input-field(name='image', type='file', accept='.jpg,.jpeg,.png')
    .form-group
      input.form-btn.btn(type='submit', value='Add')
